# Global
POSTGRES_USER=securedesk
POSTGRES_PASSWORD=securedesk
POSTGRES_DB=securedesk
POSTGRES_PORT=5432
POSTGRES_HOST=db

# Certificates for TLS (inside containers)
TLS_CERT_PATH=/certs/dev.cert
TLS_KEY_PATH=/certs/dev.key

# Gateway
GATEWAY_PORT=8443
GATEWAY_HTTP_PORT=8080
FRONTEND_ORIGIN=https://localhost:4173
AUTH_SERVICE_URL=http://auth-service:4000
API_SERVICE_URL=http://api-service:5000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Auth service
AUTH_PORT=4000
JWT_ACCESS_SECRET=change_me_access_secret
JWT_REFRESH_SECRET=change_me_refresh_secret
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d
COOKIE_DOMAIN=localhost
SECURE_COOKIES=true
ACCOUNT_LOCK_THRESHOLD=5
ACCOUNT_LOCK_MS=900000

# API service
API_PORT=5000
JWT_ACCESS_SECRET=change_me_access_secret

# Front
VITE_API_BASE=https://localhost:8080
